<h1> Deals for <%= "#{params[:city]}" %></h1>

<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder: "Find a hot deal", class: "form-control" %>
  <div class="input-group">
  <%= button_tag "Search for stuff",  :class => "btn", :name => nil %>
  </div>
</div>
<% end %>

<%= @deals.each do |record| %>
  <ul>
    <li><strong>Title:</strong> <%= link_to "#{record.short_title}", deal_path(record.offer_id) %></li>
    <li>Price: Â£<%= record.price %></li>
  </ul>
<% end %>
